# Database connection string (PostgreSQL)
DATABASE_URL=postgresql://username:password@host:5432/database_name

# Session secret for cookie encryption (generate with: openssl rand -hex 32)
SESSION_SECRET=your-random-secret-key-here-at-least-32-characters

# Node environment
NODE_ENV=production

# Resend API key for password reset emails (get it from resend.com)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxx

# Email sender address (optional, default: noreply@resend.dev)
EMAIL_FROM=Trading Journal <noreply@tuodominio.com>
